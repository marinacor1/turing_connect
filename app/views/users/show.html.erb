<div class="user-dashboard">
  <div class="page-header">User Dashboard</div>
  <div class="user-image">
    <%= image_tag(@user.image, width: "250", height: "250") %>
  </div>
  <br>
  <br>
  <div class="user-info">
    <strong><p>Welcome to your dashboard, <%= @user.name %></p></strong>
    <p>Name</p>
    <p><%= @user.name %></p>
    <p>Current Employer</p>
    <p><%= @user.current_employer %></p>
    <p>Cohort</p>
    <p> <%= @user.cohort %></p>
    <p>Location</p>
    <p><%= @user.full_street_address %></p>
    <p>Email</p>
    <p><%= @user.email %></p>
  </div>
  <p>Moving? Got a new job?
  <strong><%= link_to "Update Your Account", edit_user_path %> </p></strong>
</div>
