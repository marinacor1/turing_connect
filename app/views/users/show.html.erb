<div class="user-dashboard">
  <div class="page-header">User Dashboard</div>
  <div class="user-image">
</div>
<div class='user-info-table'>
<table cellspacing="1" cellpadding="1">
  <tr>
    <td><%= image_tag(@user.image, width: "250", height: "250") %></td>
    <td>
      <div class="user-dashboard-info" id='<%= @id %>'>
      <strong><p class="user-label">Name</p></strong>
      <p class="user-detail-name"><%= @user.name %></p>
      <strong><p class="user-label">Current Employer</p></strong>
      <p class="user-detail-employer"><%= @user.current_employer %></p>
      <strong><p class="user-label">Cohort</p></strong>
      <p class="user-detail"> <%= @user.cohort %></p>
      <strong><p class="user-label">Street Address</p></strong>
      <p class="user-detail-address"><%= @user.street_address %></p>
      <strong><p class="user-label">City</p></strong>
      <p class="user-detail-city"><%= @user.city %></p>
      <strong><p class="user-label">State</p></strong>
      <p class="user-detail-state"><%= @user.state %></p>
      <strong><p class="user-label">Email</p></strong>
      <p class="user-detail-email"><%= @user.email %></p>
      <strong><p class="user-label">Status</p></strong>
      <p class="user-detail-status"><%= @user.status %></p>
      </div>
    </td>
  </tr>
</table>
</div>
